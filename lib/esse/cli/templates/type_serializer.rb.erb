# frozen_string_literal: true

class <%= @index_name %> < <%= @base_class %>
  module Serializers
    class <%= @type.camelize %>Serializer
      def initialize(<%= @type %>, **params)
        @entity = <%= @type %>
        @params = params
      end

      def to_h
        {
          id: entity.id, # This field is required
          name: entity.name,
        }
      end

      protected

      attr_reader :entity, :params
    end
  end
end
